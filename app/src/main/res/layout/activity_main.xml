<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.connectthree.MainActivity">

    <GridLayout
        android:id="@+id/gridLayoutBoard"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/board"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/counter0_0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:alpha="0"
            android:onClick="clickCell"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/counter0_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:alpha="0"
            android:onClick="clickCell"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/counter0_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:alpha="0"
            android:onClick="clickCell"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/counter1_0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:layout_row="1"
            android:alpha="0"
            android:onClick="clickCell"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/counter1_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:layout_row="1"
            android:alpha="0"
            android:onClick="clickCell"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/counter1_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:layout_row="1"
            android:alpha="0"
            android:onClick="clickCell"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/counter2_0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:layout_row="2"
            android:alpha="0"
            android:onClick="clickCell"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/counter2_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:layout_row="2"
            android:alpha="0"
            android:onClick="clickCell"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/counter2_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:layout_row="2"
            android:alpha="0"
            android:onClick="clickCell"
            app:srcCompat="@drawable/red" />

    </GridLayout>
</RelativeLayout>
